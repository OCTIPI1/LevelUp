<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <ModFolder>C:\Program Files (x86)\Steam\steamapps\common\RimWorld\Mods\</ModFolder>
    <OutputPath>$(ModFolder)LevelUp\Assemblies\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <DebugType>none</DebugType>
    <NoStandardLib>true</NoStandardLib>
    <Optimize>true</Optimize>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="..\..\Mod\**\*" LinkBase="!Mod" />
  </ItemGroup>
    
  <Target Name="Deploy" AfterTargets="CopyFilesToOutputDirectory">
    <RemoveDir Directories="$(ModFolder)LevelUp\**" />
    
    <Copy
      SourceFiles="@(Content)"
      DestinationFiles="@(Content->'$(ModFolder)LevelUp\%(RecursiveDir)%(Filename)%(Extension)')"
      UseHardlinksIfPossible="true" />
  </Target>
        
  <ItemGroup>
    <PublicizeAssembly Include="Assembly-CSharp;UnityEngine.CoreModule" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.3.3056-beta" />
    <PackageReference Include="Lib.Harmony" Version="2.1.0" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3" />
  </ItemGroup>

</Project>