<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <Configurations>1.1;1.2;1.3</Configurations>
    <OutputPath>../$(Configuration)/Assemblies</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <DebugType>none</DebugType>
    <NoStandardLib>true</NoStandardLib>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <PublicizeAssembly Include="Assembly-CSharp;UnityEngine.CoreModule" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.1.0" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 1.1">
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.1.2654" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 1.2">
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.2.2905" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 1.3">
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.3.3056-beta" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\**\*" Exclude="..\..\.git\**\*;..\..\Source\**\*" LinkBase="!ModFolder" />
  </ItemGroup>
</Project>